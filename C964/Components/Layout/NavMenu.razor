                        <span class="bi bi-database-fill-nav-menu" aria-hidden="true"></span> Data
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Logout">
                        <span class="bi bi-door-closed-nav-menu" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>

            </Authorized>
            <NotAuthorized>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-door-open-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>

            </NotAuthorized>
